<div class="container">

  <div class="show-card d-flex pt-3">
    <div class="plant-info">
      <h1><%= @plant.name %></h1>
      <p><%= @plant.description %></p>
      <p>Â£<%= @plant.price_per_day %></p>
    </div>
    <div class="plant-img">
      <%= image_tag(@plant.photo) if @plant.photo.attached? %>
    </div>
  </div>

  <%= link_to "Book Plant", new_plant_booking_path(@plant)  %>

  <%= link_to "All Plants", plants_path %>
  <% if policy(@plant).edit? %>
    <%= link_to "Edit", edit_plant_path(@plant) %>
  <% end %>
  <% if policy(@plant).destroy? %>
    <%= link_to "Delete Plant", plant_path(@plant), method: :delete, data: { confirm: 'Are you certain you want to delete this?' } %>
  <% end %>
</div>
